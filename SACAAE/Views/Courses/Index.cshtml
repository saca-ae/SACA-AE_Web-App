@model IEnumerable<SACAAE.Models.Curso>



@{
    ViewBag.Title = "Cursos";
    Layout = "~/Views/Shared/Privado.cshtml";
}
<link rel="stylesheet" href="../Content/themes/blue/style.css" type="text/css" media="print, projection, screen">
 
  
<body>

<h1 class="page-header">Cursos</h1>
@if (TempData.ContainsKey("MessageError"))
{
    <p class="text-danger">@TempData["MessageError"].ToString()</p>
}
@if (TempData.ContainsKey("MessageSuccess"))
{
    <p class="text-success">@TempData["MessageSuccess"].ToString()</p>
}

<p>
    <a href="@Url.Action("CrearCurso", "Courses")"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>  Agregar Curso</a>
</p>
<table id="myTable" class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th class="text-center">
                    Código
                   <!--@Html.DisplayNameFor(model => model.Codigo)-->
                </th>
                <th class="text-center">
                    Horas Teóricas
                    <!--@Html.DisplayNameFor(model => model.HorasTeoricas)-->
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Bloque)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Externo)
                </th>
                <th class="text-center">
                    Horas Prácticas
                   <!--@Html.DisplayNameFor(model => model.HorasPracticas)-->
                </th>
                <th class="text-center">
                    Créditos
                    <!--@Html.DisplayNameFor(model => model.Creditos)-->
                </th>
                <th>Acciones</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.HorasTeoricas)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Bloque)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Externo)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.HorasPracticas)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Creditos)
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("ModificarCurso", new { id = item.ID })" title="Editar"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> &nbsp
                        <a href="@Url.Action("EliminarCurso", new { id = item.ID })" title="Eliminar"><span class="glyphicon  glyphicon-trash" aria-hidden="true"></span></a>
                    </td>
                </tr>
            }
        </tbody>
</table>

</body>

    @section Scripts {
    <script type="text/javascript">
        $(function () {
            $("#myTable").tablesorter();
        }
);
    </script>
<script type="text/javascript" src="../Scripts/jquery.tablesorter.js"></script>
    
    
      } 