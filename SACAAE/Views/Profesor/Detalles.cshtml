@model SACAAE.Models.Profesore

@{
    ViewBag.Title = "Detalles del Profesor";
    Layout = "~/Views/Shared/Privado.cshtml";
}

<div class="col-lg-4">
    <h2>Detalles del Profesor</h2>
    <hr />

    <div class="span4">


        <h4>
            <span class="label label-info">
                @Html.DisplayNameFor(model => model.Nombre)

                @Html.DisplayFor(model => model.Nombre)
            </span>
        </h4>



         <h4>
            <span class="label label-info">
                @Html.DisplayNameFor(model => model.Link)
                
                @Html.DisplayFor(model => model.Link)
            </span>
        </h4>

        <h4>
            <span class="label label-info">
                @Html.DisplayNameFor(model => model.Correo)

                @Html.DisplayFor(model => model.Correo)

            </span>
        </h4>

        <h4>
            <span class="label label-info">
                @Html.DisplayNameFor(model => model.Tel1)
                @Html.DisplayFor(model => model.Tel1)
            </span>
        </h4>
        <h4>
            <span class="label label-info">
                @Html.DisplayNameFor(model => model.Tel2)
                @Html.DisplayFor(model => model.Tel2)
            </span>
        </h4>
        <p>
            @Html.ActionLink("Editar", "Editar", new { id = Model.ID }) |
    @Html.ActionLink("Regresar", "Index")
        </p>
    </div>

    

    <h2>Proyectos Asociados</h2>
</div>

<div class="row">
    <div class="span12">
        <table class="table  table-hover">
            <tr>
                <th>
                    Nombre
                </th>
                <th class="text-center">
                    Inicio
                </th>
                <th class="text-center">
                    Fin
                </th>
                <th class="text-center">Acciones</th>
            </tr>

            @foreach (var item in new SACAAE.Models.RepositorioProyecto().ObtenerProfesorProyectos(Int32.Parse(Url.RequestContext.RouteData.Values["id"].ToString())))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)

                    </td>
                    <td class="text-center">
                        @item.Inicio.Value.ToString("dd/MM/yyyy")
                    </td>
                    <td class="text-center">
                        @item.Fin.Value.ToString("dd/MM/yyyy")
                    </td>

                    <td>

                        <a href="@Url.Action("Detalles", new { id = item.ID })"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> &nbsp

                        <a href="@Url.Action("Editar", new { id = item.ID })"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> &nbsp

                        <a href="@Url.Action("Eliminar", new { id = item.ID })"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>

                    </td>
                </tr>
            }

        </table>

    </div>
</div>

<h2>Comisiones Asociadas</h2>
<div class="row">
    <div class="span12">
        <table class="table  table-hover">
            <tr>
                <th>
                    Nombre
                </th>
                <th class="text-center">
                    Inicio
                </th>
                <th class="text-center">
                    Fin
                </th>

                <th class="text-center">Acciones</th>
            </tr>

            @foreach (var item in new SACAAE.Models.RepositorioComision().ObtenerProfesorComisiones(Int32.Parse(Url.RequestContext.RouteData.Values["id"].ToString())))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td class="text-center">
                        @item.Inicio.ToString("dd/MM/yyyy")
                    </td>
                    <td class="text-center">
                        @item.Fin.ToString("dd/MM/yyyy")
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("Detalles", new { id = item.ID })"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                        <a href="@Url.Action("Editar", new { id = item.ID })"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="@Url.Action("Eliminar", new { id = item.ID })"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>