@model IEnumerable<SACAAE.Models.Profesore>

@{
    ViewBag.Title = "Profesores";
    Layout = "~/Views/Shared/Privado.cshtml";
}



<h1 class="page-header">
    Profesores
</h1>
    
        @if (TempData.ContainsKey("Message"))
        {
            <p class="text-success">@TempData["Message"].ToString()</p>
        }
        <p>
           
            <a href="@Url.Action("Crear", "Profesor")"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>  Agregar Profesor</a>
        </p>
   



        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nombre)
                    </th>
                    <th class="text-center">
                        Plaza
                    </th>
                    <th class="text-center">
                        Horas Asignadas
                    </th>
                    <th class="text-center">Asignar</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td class="text-center">
                            @for (int i = 0; i < item.PlazaXProfesors.Count(); i++)
                        {
                        @Html.DisplayFor(modelItem => item.PlazaXProfesors.ElementAt(i).Plaza1.Codigo_Plaza)
                        <br />
                        }
                        </td>
                        <td class="text-center">
                            @for (int i = 0; i < item.PlazaXProfesors.Count(); i++)
                        {
                        @Html.DisplayFor(modelItem => item.PlazaXProfesors.ElementAt(i).Horas_Asignadas)
                        <br />
                        }
                        </td>
                        <td class="text-center">
                            @Html.ActionLink("A Comisión", "Asignar", "ComisionProfesor") |
                            @Html.ActionLink("A Proyecto", "Asignar", "ProfesoresProyectos") |
                            @Html.ActionLink("A Curso", "Asignar", "CursoProfesor")
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("Detalles", new { id = item.ID })"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> &nbsp
                            <a href="@Url.Action("Editar", new { id = item.ID })"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> &nbsp
                            <a href="@Url.Action("Eliminar", new { id = item.ID })"><span class="glyphicon  glyphicon-trash" aria-hidden="true"></span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


