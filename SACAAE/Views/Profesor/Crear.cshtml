@model SACAAE.Models.Profesore

@{
    ViewBag.Title = "Agregar Profesor";
    Layout = "~/Views/Shared/Privado.cshtml";
}

<div class="col-lg-4">
    <h2>Agregar Profesor</h2>
    <hr />
    <div class="span12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

           

            <div class="editor-label">
                @Html.LabelFor(model => model.Nombre)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Nombre, new
               {
                   @class = "form-control",
                   @placeholder = "Nombre del Profesor",
                   @required = "true"
               })
                @Html.ValidationMessageFor(model => model.Nombre)
            </div>

            

            
            <div class="editor-label">
                @Html.LabelFor(model => model.Link)
            </div>
            
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Link, new
               {
                   @class = "form-control",
                   @placeholder = "Enlace a curriculum",
               })
                @Html.ValidationMessageFor(model => model.Link)
            </div>


            <div class="editor-label">
                @Html.LabelFor(model => model.Tel1)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Tel1, new
                       {
                           @class = "form-control",
                           @placeholder = "Telefono principal",
                           @required = "true"
                       })
                @Html.ValidationMessageFor(model => model.Tel1)
            </div>


            <div class="editor-label">
                @Html.LabelFor(model => model.Tel2)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Tel2, new
                       {
                           @class = "form-control",
                           @placeholder = "Telefono Secundario",
                           @required = "true"
                       })
                @Html.ValidationMessageFor(model => model.Tel2)
            </div>


            <div class="editor-label">
                @Html.LabelFor(model => model.Correo)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Correo, new
                       {
                           @class = "form-control",
                           @placeholder = "Correo Principal",
                           @required = "true"
                       })
                @Html.ValidationMessageFor(model => model.Correo)
            </div>

            <br />
            <p>
                <input type="submit" value="Crear" class="btn" /> | @Html.ActionLink("Regresar", "Index")
            </p>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
