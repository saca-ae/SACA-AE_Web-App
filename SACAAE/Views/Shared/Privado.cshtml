<html lang="es">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <title>@ViewBag.Title - SACAAE</title>    
    <meta name="viewport" content="width=device-width" />
    @Styles.Render("~/Content/css")
    <style>
        body {
            padding-top: 60px;
        }
    </style>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand">@Html.ActionLink("SACAAE", "Login", "Account")</div>
                <!--<a class="navbar-brand" href="#">SACAAE</a>-->
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administrar<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Usuarios", "Index", "Account")</li>
                            <li>@Html.ActionLink("Periodos", "AgregarPeriodo", "Periodo")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Consultas<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Generar Reporte", "Download", "Reportes")</li>
                            <li>@Html.ActionLink("Reporte Profesores y Cursos por Plan", "Index", "ReporteProfeCursoPlan")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Mantenimientos<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Cursos", "Index", "Courses")</li>
                            <li>@Html.ActionLink("Bloques Académicos", "Index", "Bloque")</li>
                            <li>@Html.ActionLink("Planes de Estudio", "Index", "Plans")</li>
                            <li>@Html.ActionLink("Oferta Academica", "Index", "OfertaAcademica")</li>
                            <li>@Html.ActionLink("Aulas", "Index", "Aula")</li>
                            <li>@Html.ActionLink("Horario", "Index", "Horarios")</li>
                            <li>@Html.ActionLink("Profesores", "Index", "Profesor")</li>
                            <li>@Html.ActionLink("Proyectos", "Index", "Proyecto")</li>
                            <li>@Html.ActionLink("Comisiones", "Index", "Comision")</li>
                            <li>@Html.ActionLink("Plazas", "Index", "Plazas")</li>
                        </ul>
                    </li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Asignaci&oacute;n de Carga<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Asignar Profesor a Curso", "Asignar", "CursoProfesor")</li>
                            <li>@Html.ActionLink("Revocar Profesor de Curso", "Revocar", "CursoProfesor")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Asignar Profesor a Comisión", "Asignar", "ComisionProfesor")</li>
                            <li>@Html.ActionLink("Revocar Profesor de Comisión", "Revocar", "ComisionProfesor")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Asignar Profesor a Proyecto", "Asignar", "ProfesoresProyectos")</li>
                            <li>@Html.ActionLink("Revocar Profesor de Proyecto", "Revocar", "ProfesoresProyectos")</li>
                        </ul>
                    </li>
                    <li class="active">@Html.ActionLink("Cerrar sesión", "Logoff", "Account")</li>
                </ul>
            </div>
            <!--/.nav-collapse -->
        </div>
    </div>

    <div class="container">
        @RenderBody()
    </div>

    <div id="footer">
        <div class="container">
            <p class="text-muted">Escuela de Administraci&oacute;n de Empresas - 2014.</p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
</body>
</html>
