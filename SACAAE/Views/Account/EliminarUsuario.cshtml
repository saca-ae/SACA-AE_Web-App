@model SACAAE.Models.Usuario

@{
    ViewBag.Title = "Eliminar Usuario";
    Layout = "~/Views/Shared/Privado.cshtml";
}

<div class="col-lg-4">
    <h2>Borrar Informaci&oacute;n de Usuario</h2>
    <hr />
    <div class="span12">
        <h4><span class="label label-warning">¿Est&aacute; seguro de que desea eliminar la informaci&oacute;n de este usuario?</span></h4>
        <br />
        <h4>
            <span class="label label-info">
                <label>Nombre Completo:</label>
                @Html.DisplayFor(model => model.Nombre)
            </span>
        </h4>
        <h4>
            <span class="label label-info">
                <label>Nombre de Usuario:</label>
                @Html.DisplayFor(model => model.Contrasenia)
            </span>
        </h4>

        <h4>
            <span class="label label-info">
                <label>Nombre de Usuario:</label>
                @Html.DisplayFor(model => model.NombreUsuario)
            </span>
        </h4>
        <h4>
            <span class="label label-info">
                <label>Correo Electrónico:</label>
                @Html.DisplayFor(model => model.Correo)
            </span>
        </h4>
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <p>
                <input type="submit" value="Borrar" class="btn" />
                |@Html.ActionLink("Regresar", "Index")
            </p>
        }
    </div>
</div>

