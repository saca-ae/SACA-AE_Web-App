@model SACAAE.Models.Usuario

@{
    ViewBag.Title = "Crear Usuario";
    Layout = "~/Views/Shared/Privado.cshtml";
}

<div class="col-lg-4">
    <h2>Crear Usuario</h2>

    @if (TempData.ContainsKey("MessageError"))
    {
        <p class="text-danger">@TempData["MessageError"].ToString()</p>
    }
    @if (TempData.ContainsKey("MessageSuccess"))
    {
        <p class="text-success">@TempData["MessageSuccess"].ToString()</p>
    }

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Usuario</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="editor-field">
                <label>Nombre Completo</label>
                <br />
                @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "text-danger" })
            </div>

            <div class="editor-field">
                <label>Nombre de Usuario</label>
                <br />
                @Html.EditorFor(model => model.NombreUsuario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreUsuario, "", new { @class = "text-danger" })
            </div>

            <div class="editor-field">
                <label>Contraseña</label>
                <br />
                @Html.EditorFor(model => model.Contrasenia, new { htmlAttributes = new { @class = "form-control", @Type = "password" } })
                @Html.ValidationMessageFor(model => model.Contrasenia, "", new { @class = "text-danger" })
            </div>
            <div class="editor-field">
                <label>Validar Contraseña</label>
                <br />
                <input type="password" name="validarContrasenia" id="validarContrasenia" class="form-control">
            </div>
            <div class="editor-field">
                <label>Correo Electrónico</label>
                <br />
                @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "form-control", @Type = "email" } })
                @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "text-danger" })
            </div>
            <br />
            <p>
                <input type="submit" value="Crear" class="btn" />
                | @Html.ActionLink("Regresar", "Index")
            </p>
        </div>
    }
</div>
