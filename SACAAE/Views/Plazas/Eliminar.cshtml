@model SACAAE.Models.Plaza

@{
    ViewBag.Title = "Borrar Plaza";
    Layout = "~/Views/Shared/Privado.cshtml";
}

<div class="col-lg-4">
    <h2>Borrar Informaci&oacute;n de Plazas</h2>
    <hr />
    <div class="span12">
        <h4><span class="label label-warning">¿Est&aacute; seguro de que desea eliminar la informaci&oacute;n de esta Plaza?</span></h4>
        <br />
        <h4>
            <span class="label label-info">
                Codigo Plaza:

                @Html.DisplayFor(model => model.Codigo_Plaza)
            </span>
        </h4>
        <h4>
            <span class="label label-info">
                Tipo de Plaza:

                @Html.DisplayFor(model => model.Tipo_de_plaza)
            </span>
        </h4>

        <h4>
            <span class="label label-info">
                Tipo segun tiempo:

                @Html.DisplayFor(model => model.Tipo_segun_tiempo)
            </span>
        </h4>

        <h4>
            <span class="label label-info">
                Horas Totales:

                @Html.DisplayFor(model => model.Horas_Totales)
            </span>
        </h4>
        <h4>
            <span class="label label-info">
                Tiempo de vigencia:

                @Html.DisplayFor(model => model.Tiempo_de_vigencia)
            </span>
        </h4>
        <br />
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <p>
                <input type="submit" value="Borrar" class="btn" />
                |
                @Html.ActionLink("Regresar", "Index")
            </p>
        }

    </div>
</div>
