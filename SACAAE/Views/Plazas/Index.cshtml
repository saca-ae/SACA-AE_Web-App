@model IEnumerable<SACAAE.Models.Plaza>

@{
    ViewBag.Title = "Plazas";
    Layout = "~/Views/Shared/Privado.cshtml";
}


<h1 class="page-header">
    Plazas
</h1>
   
        @if (TempData.ContainsKey("Message"))
        {
            <p class="text-success">@TempData["Message"].ToString()</p>
        }
        <p>
            <a href="@Url.Action("Crear", "Plazas")"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>  Agregar Plaza</a>

         </p>
  
        <table id="myTable" class="table table-hover">
            <thead>
            <tr>
                <th>
                    Codigo
                </th>
                <th class="text-center">
                    Tipo de Plaza
                </th>
                <th class="text-center">
                    Tipo según tiempo
                </th>
                <th class="text-center">
                    Horas Totales
                </th>
                <th class="text-center">
                    Tiempo de vigencia
                </th>
                <th class="text-center">Acciones</th>
            </tr>
                </thead>
    <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo_Plaza)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Tipo_de_plaza)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Tipo_segun_tiempo)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Horas_Totales)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Tiempo_de_vigencia)
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("Detalles", new { id = item.ID })"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a>
                        <a href="@Url.Action("Editar", new { id = item.ID })"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                        <a href="@Url.Action("Eliminar", new { id = item.ID })"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
                    </td>
                </tr>
            }
        </tbody> 
        </table>


    @section Scripts {
    <script type="text/javascript">
        $(function () {
            $("#myTable").tablesorter();
        }
);
    </script>
<script type="text/javascript" src="../Scripts/jquery.tablesorter.js"></script>
    
    
      }
