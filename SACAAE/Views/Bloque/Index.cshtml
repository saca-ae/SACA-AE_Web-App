@model IEnumerable<SACAAE.Models.BloqueAcademico>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Privado.cshtml";
}

<h2>Bloques Académicos</h2>
<hr />
<p>
    <a href="@Url.Action("CrearBloqueAcademico", "Bloque")"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>  Agregar Bloque Académico</a>
</p>
<div class="row">
    <div class="span12">
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Nivel)
                </th>
                <th class="text-center">Acciones</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Nivel)
                    </td>
                    <td class="text-center">
                        <a href="@Url.Action("ModificarBloqueAcademico", new { id = item.ID })"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> &nbsp
                        <a href="@Url.Action("EliminarBloqueAcademico", new { id = item.ID })"><span class="glyphicon  glyphicon-trash" aria-hidden="true"></span></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>
