@model IEnumerable<SACAAE.Models.BloqueAcademico>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Privado.cshtml";
}


<h1 class="page-header">Bloques Académicos</h1>
<p>
    <a href="@Url.Action("CrearBloqueAcademico", "Bloque")"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>  Agregar Bloque Académico</a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
               <!-- @Html.DisplayNameFor(model => model.Descripcion)-->
                Descripción
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Nivel)
            </th>
            <th class="text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Nivel)
                </td>
                <td class="text-center">
                    <a href="@Url.Action("ModificarBloqueAcademico", new { id = item.ID })" title="Editar"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> &nbsp
                    <a href="@Url.Action("EliminarBloqueAcademico", new { id = item.ID })" title="Eliminar"><span class="glyphicon  glyphicon-trash" aria-hidden="true"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
 
