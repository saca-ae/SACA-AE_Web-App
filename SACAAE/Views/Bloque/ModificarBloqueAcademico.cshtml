@model SACAAE.Models.BloqueAcademico

@{
    ViewBag.Title = "ModificarBloqueAcademico";
    Layout = "~/Views/Shared/Privado.cshtml";
}

<div class="col-lg-4">
    <h2>Modificar Bloque Académico</h2>
    @if (TempData.ContainsKey("MessageError"))
    {
        <p class="text-danger">@TempData["MessageError"].ToString()</p>
    }
    @if (TempData.ContainsKey("MessageSuccess"))
    {
        <p class="text-success">@TempData["MessageSuccess"].ToString()</p>
    }
    <hr />
    <div class="span12">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ID)
            <input id="oDescripcion" name="oDescripcion" hidden type="text" value="@ViewBag.Bloque.Descripcion" >
            <div class="editor-label">
                <label>Código</label>
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.Descripcion, new
               {
                   @class = "form-control",
                   @required = "true"
               })
                @Html.ValidationMessageFor(model => model.Descripcion)
            </div>

            <div class="editor-label">
                <label>Nivel</label>
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.Nivel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Nivel, "", new { @class = "text-danger" })
            </div>
            <br />
            <p>
                <input type="submit" value="Guardar" class="btn" />
                | @Html.ActionLink("Regresar", "Index")
            </p>
        }
    </div>
</div>