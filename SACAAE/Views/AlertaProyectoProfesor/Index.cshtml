@model IEnumerable<SACAAE.Models.AlertaProyectoProfesor>



@{
    ViewBag.Title = "AlertaProyectoProfesor";
    Layout = "~/Views/Shared/Privado.cshtml";
}
<link rel="stylesheet" href="../Content/themes/blue/style.css" type="text/css" media="print, projection, screen">


<body>
    <h2>Proyectos a @Request.QueryString["dias"] días a Vencer o Vencidos</h2>
    <label>Cambiar Rango de Días</label>
    <br />
    <div class="editor-field">
        <input name="dias" id="dias" type="number" min="1" value="0" />
        <input type="submit" onclick="location.href = '/AlertaProyectoProfesor/Index?Dias='+dias.value;" value=" Cambiar" class="btn" />
    </div> <br />
    <label>***IMPORTANTE: Los proyectos vencidos están representados de color ROJO y los a próximos a vencer en AMARRILLO</label>
        <table id="myTable" class="table">
            <thead>
                <tr>
                    <th>
                        Profesor
                    </th>
                    <th>
                        Proyecto
                    </th>
                    <th>
                        Inicio
                    </th>
                    <th>
                        Fin
                    </th>
                    <th>
                        Entidad
                    </th>

                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    if (item.ES_VENCIDO)
                {
                        <tr >
                            <td style='background:#FF3A3A'>
                                @Html.DisplayFor(modelItem => item.PROFESOR)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PROYECTO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.INCIO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FIN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ENTIDAD)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Editar", "Proyecto", new { id = item.ID }, null)
                            </td>
                            <td>
                                @Html.ActionLink("Eliminar", "Eliminar", "Proyecto", new { id = item.ID }, null)
                            </td>
                        </tr>
                }
                    else
                    {
                        <tr >
                            <td style='background:#E9E56C'>
                                @Html.DisplayFor(modelItem => item.PROFESOR)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PROYECTO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.INCIO)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FIN)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ENTIDAD)
                            </td>
                            <td>
                                @Html.ActionLink("Editar", "Editar", "Proyecto", new { id = item.ID }, null)
                            </td>
                            <td>
                                @Html.ActionLink("Eliminar", "Eliminar", "Proyecto", new { id = item.ID }, null)
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>

</body>

@section Scripts {
    <script type="text/javascript">
        $(function () {
            $("#myTable").tablesorter();
        }
);
    </script>
    <script type="text/javascript" src="../Scripts/jquery.tablesorter.js"></script>


} 