@model IEnumerable<SACAAE.Models.Proyecto>


@{
    ViewBag.Title = "Proyectos";
    Layout = "~/Views/Shared/Privado.cshtml";
}


<div class="row">
        
    <h2>Proyectos</h2> 
    <hr />
    <div class="span12">
        @if (TempData.ContainsKey("Message"))
        {
            <p class="text-success">@TempData["Message"].ToString()</p>
        }
        <p>
            
            <a href="@Url.Action("Crear", "Proyecto")"><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>  Agregar Proyecto</a>
        </p>
    </div>
</div>
<div class="row">
    <div class="span12">
        <table class="table  table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Inicio)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.Fin)
                </th>
                <th class="text-center">Acciones</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td >
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td class="text-center">
                        @item.Inicio.Value.ToString("dd/MM/yyyy")
                    </td>
                    <td class="text-center">
                        @item.Fin.Value.ToString("dd/MM/yyyy")
                    </td>

                    <td>
                    
                        <a href="@Url.Action("Detalles", new { id = item.ID })"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span></a> &nbsp
                  
                        <a href="@Url.Action("Editar", new { id = item.ID })"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a> &nbsp
                   
                        <a href="@Url.Action("Eliminar", new { id = item.ID })"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>

                    </td>
                </tr>
            }

        </table>

    </div>
</div>
